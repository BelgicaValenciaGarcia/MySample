<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_routes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.companydomain.mysample.Routes"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Elige la Ruta"
        android:textSize="26sp"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="16dp"/>

    /* 1.Seleccion visible de la Ruta */
    <ListView
        android:id="@+id/RutaCentro"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/textView1"/>

    /* Habilitar despues de Ruta */
    /* Almacenar en BaseDatos No. Transporte */
    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="No. de transporte"
        tools:ignore="HardcodedText"
        android:inputType="text"
        android:autofillHints=""/>

    /* Habilitar despues de No. Transporte almacenado*/
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Aceptar"
        tools:ignore="HardcodedText"
        android:enabled="true"/>

</RelativeLayout>